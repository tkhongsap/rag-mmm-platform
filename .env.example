# =============================================================================
# RAG + MMM Platform Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# -----------------------------------------------------------------------------
# Anthropic (Required for LLM)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# OpenAI (Required for embeddings)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------------------------------------------
# RAG Configuration
# -----------------------------------------------------------------------------
CHUNK_SIZE=1024
CHUNK_OVERLAP=50
EMBED_MODEL=text-embedding-3-small
LLM_MODEL=claude-opus-4-6
BATCH_SIZE=10
MAX_WORKERS=4
REQUEST_DELAY=0.1
MAX_RETRIES=3

# Retrieval options
CLASSIFIER_MODE=llm          # "llm" or "embedding"
ENABLE_FAST_FILTERING=true   # Fast metadata pre-filtering

# -----------------------------------------------------------------------------
# MMM Configuration
# -----------------------------------------------------------------------------
MMM_DATE_COLUMN=date
MMM_TARGET_COLUMN=sales
MMM_ADSTOCK_MAX_LAG=8
MMM_CONFIDENCE_LEVEL=0.95

# -----------------------------------------------------------------------------
# Platform / UI
# -----------------------------------------------------------------------------
STREAMLIT_PORT=8501
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Asset Generation
# -----------------------------------------------------------------------------
ASSET_GEN_AI=0          # Set to "1" to use OpenAI gpt-image-1.5 for campaign images
